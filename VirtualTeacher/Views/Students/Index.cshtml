@{
    ViewData["title"] = "Students";
}

@model StudentsViewModel

    @* SEARCHBAR *@

<div style="display: flex; justify-content: space-between; align-items: center;">
    <span>
        <form asp-controller="Students" asp-action="StudentsByName" method="Get">
            <div class="input-group mb-3 mt-3 ps-2 pe-2">
                <button class="btn btn-outline-secondary" type="button" id="button-addon1">Go</button>
                <input type="text" class="form-control" name="SearchKeyWord" placeholder="Search by student name" aria-label="search area">
            </div>
        </form>
    </span>
</div>

<div class="d-flex justify-content-between">


    @* LIST OF STUDENTS *@

    <div style="width: 70%">
        @{
            if (@Model.FilteredCourses != null){
                foreach (var course in @Model.FilteredCourses)
                {
                    <H4 style="color: blue">@course.Title</H4>
                    foreach(var student in course.EnrolledStudents)
                    {
                    <div class="accordion" id="accordionPanelsStayOpenExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-@student.Id-@course.Id" aria-expanded="false" aria-controls="panelsStayOpen-collapseOne">
                                    <text>@student.FirstName</text>
                                    <text>&nbsp;@student.LastName</text>
                                </button>
                            </h2>
                            <div id="panelsStayOpen-@student.Id-@course.Id" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingOne" style="">
                                <div class="accordion-body">
                                Submisssions:
                               @{
                                    foreach(var lecture in course.Lectures)
                                    {
                                        if(lecture.AssignmentLink != "")
                                        {
                                            <li>
                                                @lecture.Title <text>Status: </text>
                                            </li>
                                            if(lecture.Submissions.Any(sub => sub.StudentId == @student.Id))
                                            {
                                                <text>submited</text>
                                            }
                                            else
                                            {
                                                <text>not submited</text>
                                            }
                                        }

                                    }
                                }
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                }
            }
        }
    </div>

    @* FILTERS *@

    <div style="width: 29%">
        <div class="card border-light mb-3">
            <form asp-controller="Students" asp-action="Index" method="Get" id="filterForm">
                <div class="card-header">Filters:</div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">

                        <div class="list-group-item"><strong>Assignments:</strong> </div>
                        @{

                        }
                        <div class="list-group-item"><strong>Courses:</strong> </div>
                        @{
                            foreach (var course in Model.FilteredCourses)
                            {
                                <div class="list-group-item ps-4">
                                    <input type="radio" class="deselectable" id="@("checkbox_" + course)" name="CourseTitle" value=@course>
                                    @course.Title
                                </div>
                            }
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Get all radio buttons with the class "deselectable"
        var radioButtons = document.querySelectorAll('.deselectable');

        // Add click event listener to each radio button
        radioButtons.forEach(function (radioButton) {
            var wasChecked = radioButton.checked; // Track previous checked state
            radioButton.addEventListener('click', function () {
                // If the radio button was previously checked, deselect it
                if (wasChecked) {
                    this.checked = false;
                }
                wasChecked = !wasChecked; // Update previous checked state
            });
        });
    });
</script>