
@{
    ViewData["Title"] = "Course Details";

}

@model Course

<div>
    <div>
        @Model.Title >>>>>>>>>>>>> Details...
    </div>

    <div class="border">
        <iframe width=1550 height="400" src="https://www.youtube.com/embed/4t7BgyA7IOI" title="Toothless Dancing To Driftveil City 10 Hours" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
        
    </div>
    <div>
        @Model.Description
    </div>
    <div>
        Teachers:
        @{
            foreach (var t in Model.ActiveTeachers)
            {
                <span>@t.FirstName @t.LastName • </span>
            }
        }
    </div>

    <div>Lectures:</div>
    <div class="border">
        <ul>
            @{
                foreach (var l in Model.Lectures)
                {
                     <li>
                        @l.Title
                        with @l.Teacher.FirstName @l.Teacher.LastName
                     </li>               
                }
            }
        </ul>
    </div>

</div>